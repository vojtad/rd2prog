	<rule italic="false" bold="false" color="red"> <!-- statements -->
		<pattern>[$%-?A-Z][$%-?A-Z0-9]+:</pattern>
	</rule>

	<rule italic="false" bold="false" color="green"> <!-- data -->
		<pattern>#\b[0-9][0-9A-F]*H\b</pattern>
		<pattern>#\b[0-9]+D?\b</pattern>
		<pattern>#\b[01]+B\b</pattern>
	</rule>

	<rule italic="false" bold="false" color="green"> <!-- string -->
		<pattern>'.+'</pattern>
	</rule>

	<rule italic="false" bold="false" color="purple"> <!-- address -->
		<pattern>[^#]\b[0-9A-F]+H\b</pattern>
	</rule>

	<rule italic="false" bold="false" color="blue"> <!-- registers -->
		<pattern>\bR[0-9]\b</pattern>
		<pattern>@\bR[01]\b</pattern>

		<pattern>\bP[0-3]\b</pattern>
		<pattern>\bP[0-3]\.[0-7]\b</pattern>
